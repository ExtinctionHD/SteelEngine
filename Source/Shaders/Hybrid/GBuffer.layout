#define SHADER_LAYOUT

#extension GL_GOOGLE_include_directive : require
#extension GL_EXT_scalar_block_layout : enable

#ifndef SHADER_STAGE
    #include "Common/Stages.h"
    #define SHADER_STAGE VERTEX_STAGE
    #pragma shader_stage(vertex)
    void main() {}
#endif

#include "Common/Common.h"

// Global
layout(set = 0, binding = 0) uniform materialUBO{ Material materials[MAX_MATERIAL_COUNT]; };
layout(set = 0, binding = 1) uniform sampler2D materialTextures[MAX_TEXTURE_COUNT];

// Frame
layout(set = 1, binding = 0, scalar) uniform frameUBO{ Frame frame; };

// Drawcall
layout(push_constant) uniform PushConstants{
    mat4 transform;
    uint materialIndex;
};

#if SHADER_STAGE == VERTEX_STAGE
    layout(location = 0) in vec3 inPosition;
    #if !DEPTH_ONLY
        layout(location = 1) in vec3 inNormal;
        layout(location = 2) in vec3 inTangent;
        layout(location = 3) in vec2 inTexCoord;

        layout(location = 0) out vec3 outPosition;
        layout(location = 1) out vec3 outNormal;
        layout(location = 2) out vec2 outTexCoord;
        #if NORMAL_MAPPING
            layout(location = 3) out vec3 outTangent;
        #endif
    #endif
#endif

#if SHADER_STAGE == FRAGMENT_STAGE
    layout(location = 0) in vec3 inPosition;
    layout(location = 1) in vec3 inNormal;
    layout(location = 2) in vec2 inTexCoord;
    #if NORMAL_MAPPING
        layout(location = 3) in vec3 inTangent;
    #endif

    layout(location = 0) out vec4 outNormal;
    layout(location = 1) out vec4 outSceneColor;
    layout(location = 2) out vec4 outBaseColorOcclusion;
    layout(location = 3) out vec4 outRoughnessMetallic;
#endif
